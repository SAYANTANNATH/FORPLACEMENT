#include<iostream>
using namespace std;
int main()
{
    int arr[100]={1,22,33,41,24,99};
    int pos,num;
    cout<<"Enter the position"<<endl;
    cin>>pos;
    cout<<"Enter the number"<<endl;
    
    cin>>num;
    
    for(int i=5;i>=pos;i--)
    {
        arr[i+1]=arr[i];
    }
    arr[pos]=num;
    cout<<"After adding the array will be"<<endl;
    for(int i=0;i<=6;i++)
    {
        cout<<arr[i]<<" ";
    }
    return 0;
}
