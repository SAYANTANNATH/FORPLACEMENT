#Linear Search
#include<iostream>
using namespace std;

bool linear(int arr[], int n, int k) {
    for (int i = 0; i < n; i++) {
        if (arr[i] == k) {
            return true;
        }
    }
    return false;
}

int main() {
    int n;
    cout << "Enter the number of elements: ";
    cin >> n;
    int arr[n];
    
    cout << "Enter " << n << " elements:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int k;
    cout << "Enter the item to search: ";
    cin >> k;

    if (linear(arr, n, k)) {
        cout << "Item is found" << endl;
    } else {
        cout << "Item is not found" << endl;
    }

    return 0;
}
